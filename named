#!/bin/sh
# See how we were called.
case "$1" in
  start)
        # Start daemon.
	if [ -f /var/run/named/named.pid ]; then
		echo -n "Bind9 already running..."
		echo
		exit 0
	fi
        echo -n "Starting named: "
        /usr/sbin/named -4 -c /etc/bind/named.conf
        echo
        ;;
  stop)
	# Stop daemon
	if [ -f /var/run/named/named.pid ]; then
		echo -n "Stoping named:"
		echo
		pkill named
		exit 0
	fi
